.v-viewer
  height 100%

  .panel
    height 100%
    display flex
    flex-direction column

    .panel-body
      flex 1
      display flex
      flex-direction column
    
      .video
        flex 1

  .control
    padding 10px

    .buttons
      width auto
      margin 0 auto
      display flex
      height 30px

      > button
        flex 1

        i
          position relative
          top -2px

      .reverse
        .icon-play
          &::before
            transform rotate(180deg)

    .slider
      width 100%
