.slider
  display inline-block
  vertical-align middle
  position relative
  height 20px
  margin 0 8px

  .slider-track
    height 10px
    width 100%
    margin-top -5px
    top 50%
    left 0
    right 0

  .slider-selection
  .slider-track-low
  .slider-track-high
    position absolute
    top 0
    bottom 0
    margin -1px
    box-sizing border-box

  input
    display none

  .tooltip.top
    margin-top -36px

  .tooltip-inner
    white-space nowrap
    max-width none

  .hide
    display none

  .slider-track
    position absolute
    cursor pointer
    background #fff
    border 1px solid #ccc
    border-radius 4px

  .slider-selection
    background #337ab7
    border 1px solid #2e6da4
    border-radius 4px
    opacity 0.65

  .slider-track-low
  .slider-track-high
    background none
    border-radius 3px

  .slider-handle
    position absolute
    top 50%
    width 16px
    height 16px
    margin-top -8px
    margin-left -8px
    background #337ab7
    border 1px solid #2e6da4
    border-radius 50%

.slider:hover:not(.slider-disabled)
  .slider-track
    background #e6e6e6
    border-color #adadad

  .slider-handle
    background #286090
    border-color #204d74

  .slider-selection
    background #286090
    border-color #204d74

.slider.slider-disabled
  opacity 0.65
  cursor not-allowed

  .slider-handle
    background #fff
    border-color #ccc
