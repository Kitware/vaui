.v-activity-widget
  flex 1

  .panel
    height 100%
    display flex
    flex-direction column

  .panel-body
    position relative
    height 100%
    flex 1 1 0
    display flex
    flex-direction column
    padding-top 10px
    overflow-x hidden
    overflow-y auto

    form.form-horizontal
      display flex
      flex-direction column

  .frame-button-container button
    width 100%

  .form-group
    margin-bottom 2px
  
  .tracks
    margin-bottom 10px
    margin-left 10px

    .tracks-header
      font-size 12px
      font-weight bold
      margin-bottom 2px

    ul
      list-style none
      padding 0
      overflow-y visible
      flex 1
      margin-bottom 0

      li
        .form-group
          margin-right 0
          margin-left 0

          .range
            padding-left 0
            padding-right 5px

            div
              position relative

              button
                display none
                position absolute
                z-index 1
                width 100%

              &:hover
                button
                  display block

  .bottom-row
    text-align right
