.v-activity-creator
  flex 1

  .panel
    display flex
    flex-direction column

  .panel-body
    flex 1 1 0
    display flex
    flex-direction column
    padding-top 10px

    form.form-horizontal
      display flex
      flex-direction column

  .frame-button-container
    text-align right
  
  .tracks-header
    font-size 12px
    font-weight bold

  ul.tracks
    list-style none
    padding 0
    overflow-y auto
    overflow-x hidden
    flex 1

    li
      button
        display none
        height 0

      &:hover
        button
          display block

  .no-padding[class^="col-xs-"]
    padding 0

  .bottom-row
    text-align right
