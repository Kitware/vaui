.v-infoview
  height 100%

  .panel
    height 100%
    display flex
    flex-direction column

  .panel-body
    flex 1
    display flex
    flex-direction column

  ul
    flex 1

    &.geometry
      padding-left 20px

    &.activity
      padding-left 15px

    li
      &.track
        margin-bottom 10px

      &.activity
        margin-bottom 2px

  .clear-message
    align-self flex-end
    height auto
    text-align center
    opacity 0.6
